<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/white"
tools:context=".Activities.ViewJourneyPlannerActivity"
android:id="@+id/drawer_layout">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="test.collegecarpool.alpha.Activities.PlanJourneyActivity"
        android:weightSum="1">

        <fragment
            android:id="@+id/autocom"
            android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="top"
            android:layout_weight="0.29" />

        <ListView
            android:paddingTop="10dp"
            android:layout_width="368dp"
            android:layout_height="200dp"
            android:id="@+id/plan_journey_list_view"
            android:longClickable="true"
            tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="8dp">
        </ListView>

        <Button
            android:layout_width="match_parent"
            android:shadowColor="@color/bg_main"
            android:layout_height="wrap_content"
            android:id="@+id/use_my_location"
            android:text="@string/use_my_location"
            android:drawableStart="@mipmap/ic_gps_fixed_black_24dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/view_journey"
            android:text="@string/view_journey"
            android:drawableStart="@mipmap/ic_directions_car_black_24dp"/>

        <Button
            android:id="@+id/date_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pick_date"
            android:drawableStart="@mipmap/ic_date_range_black_24dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/save_journey"
            android:id="@+id/save_journey"
            android:drawableStart="@mipmap/ic_get_app_black_24dp"/>

        <Button
            android:text="@string/view_journey_planner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/view_journey_planner"
            android:drawableStart="@mipmap/ic_access_time_black_24dp"/>

    </LinearLayout>

<android.support.design.widget.NavigationView
    android:id="@+id/nav_view"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/bg_main"
    app:itemTextColor="@color/white"
    app:itemIconTint="@color/white"
    app:menu="@menu/nav_menu"
    android:layout_gravity="start">
</android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
