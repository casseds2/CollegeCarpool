<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/white"
tools:context=".Activities.ViewJourneyPlannerActivity"
android:id="@+id/drawer_layout">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="test.collegecarpool.alpha.Activities.PlanJourneyActivity"
        android:weightSum="1">

        <fragment
            android:id="@+id/autocom"
            android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="top"
            android:layout_weight="0.29" />

        <TextView
            android:id="@+id/entry_1"
            android:layout_width="276dp"
            android:layout_height="20dp" />

        <Button
            android:id="@+id/remove_entry1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Remove" />

        <TextView
            android:id="@+id/entry_2"
            android:layout_width="276dp"
            android:layout_height="20dp" />

        <Button
            android:id="@+id/remove_entry2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Remove" />

        <TextView
            android:id="@+id/entry_3"
            android:layout_width="276dp"
            android:layout_height="20dp" />

        <Button
            android:id="@+id/remove_entry3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Remove" />

        <TextView
            android:id="@+id/entry_4"
            android:layout_width="276dp"
            android:layout_height="20dp" />

        <Button
            android:id="@+id/remove_entry4"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Remove" />

        <Button
            android:id="@+id/submit_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/submit_address" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/view_journey"
            android:hint="@string/view_journey"/>

        <Button
            android:id="@+id/dateDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pick A Date" />

        <Button
            android:text="@string/view_journey_planner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/view_journey_planner"/>

    </LinearLayout>

<android.support.design.widget.NavigationView
    android:id="@+id/nav_view"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/bg_main"
    app:itemTextColor="@color/white"
    app:itemIconTint="@color/white"
    app:menu="@menu/nav_menu"
    android:layout_gravity="start">
</android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
